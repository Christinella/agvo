{% extends 'base.html.twig' %}

{% block title %}Destinations{% endblock %}

{% block body %}
    <h1>Destinations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destination.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ destination.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ destination.image }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ destination.prix }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ destination.categorie }}</td>
            </tr>
            <tr>
                <th>DateDepart</th>
                <td>{{ destination.dateDepart ? destination.dateDepart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateArrivee</th>
                <td>{{ destination.dateArrivee ? destination.dateArrivee|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_destinations_index') }}">back to list</a>

    <a href="{{ path('app_destinations_edit', {'id': destination.id}) }}">edit</a>

    {{ include('destinations/_delete_form.html.twig') }}
{% endblock %}
